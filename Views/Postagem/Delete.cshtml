        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.NomeUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoRedeSocial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoRedeSocial.NomeTipoRedeSocial)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoConteudo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoConteudo.NomeTipoConteudo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LikePostagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LikePostagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeslikePostagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeslikePostagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompartilhamentoPostagem)
