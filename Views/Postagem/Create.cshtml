@model iCompass.Models.Postagem

@{
    ViewData["Title"] = "Cadastrar";
}

<h1 class="subtitulo">Cadastrar</h1>

<h4>Postagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Usuário</label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoRedeSocialId" class="control-label">Rede Social</label>
                <select asp-for="TipoRedeSocialId" class ="form-control" asp-items="ViewBag.TipoRedeSocialId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoConteudoId" class="control-label">Conteúdo</label>
                <select asp-for="TipoConteudoId" class ="form-control" asp-items="ViewBag.TipoConteudoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LikePostagem" class="control-label">Likes</label>
                <input asp-for="LikePostagem" class="form-control" />
                <span asp-validation-for="LikePostagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeslikePostagem" class="control-label">Deslike</label>
                <input asp-for="DeslikePostagem" class="form-control" />
                <span asp-validation-for="DeslikePostagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompartilhamentoPostagem" class="control-label">Compartilhamentos</label>
                <input asp-for="CompartilhamentoPostagem" class="form-control" />
                <span asp-validation-for="CompartilhamentoPostagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalvosPostagem" class="control-label">Salvos</label>
                <input asp-for="SalvosPostagem" class="form-control" />
                <span asp-validation-for="SalvosPostagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeComentariosPostagem" class="control-label">Comentários</label>
                <input asp-for="QuantidadeComentariosPostagem" class="form-control" />
                <span asp-validation-for="QuantidadeComentariosPostagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPostagem" class="control-label">Data</label>
                <input asp-for="DataPostagem" class="form-control" />
                <span asp-validation-for="DataPostagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
