@model iCompass.Models.DadosInfluencer

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="subtitulo">Deletar</h1>

<h3>Você tem certeza que gostaria de apagar?</h3>
<div>
    <h4>Dados do Influencer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoConteudo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoConteudo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoRedeSocial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoRedeSocial)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DadosInfluencerId" />
        <input type="submit" value="Deletar" class="btn-danger" />
        <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
    </form>
</div>
