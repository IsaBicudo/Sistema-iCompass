@model IEnumerable<iCompass.Models.DadosInfluencer>

@{
    ViewData["Title"] = "Dados do Influencer";
}

<h1 class="subtitulo">Dados Influencer</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoConteudo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoRedeSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DadosInfluencerSeguidores)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.NomeUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoConteudo.NomeTipoConteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoRedeSocial.NomeTipoRedeSocial)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DadosInfluencerSeguidores)
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.DadosInfluencerId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.DadosInfluencerId" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.DadosInfluencerId" class="btn btn-segundo"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
