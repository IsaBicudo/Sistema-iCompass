@model IEnumerable<iCompass.Models.Usuario>

@{
    ViewData["Title"] = "Usuario";
}

<h1 class="subtitulo">Usuário</h1>

<p>
    <a class="btn-primary" asp-action="Create">Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CpfUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpfUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plano.NomePlano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailUsuario)
            </td>
            <td>
                   <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-segundo"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
