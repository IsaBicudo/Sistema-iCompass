@model IEnumerable<iCompass.Models.Plano>

@{
    ViewData["Title"] = "Planos";
}

<h1 class="subtitulo">Planos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePlano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoPlano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorPlano)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePlano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoPlano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorPlano)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.PlanoId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.PlanoId" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.PlanoId" class="btn btn-segundo"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
