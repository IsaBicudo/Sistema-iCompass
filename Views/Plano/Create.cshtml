@model iCompass.Models.Plano

@{
    ViewData["Title"] = "Cadastrar";
}

<h1 class="subtitulo">Cadastrar</h1>

<h4>Plano</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomePlano" class="control-label">Plano</label>
                <input asp-for="NomePlano" class="form-control" />
                <span asp-validation-for="NomePlano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoPlano" class="control-label">Descrição</label>
                <input asp-for="DescricaoPlano" class="form-control" />
                <span asp-validation-for="DescricaoPlano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorPlano" class="control-label">Valor</label>
                <input asp-for="ValorPlano" class="form-control" />
                <span asp-validation-for="ValorPlano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
