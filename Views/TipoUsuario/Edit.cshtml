@model iCompass.Models.TipoUsuario

@{
    ViewData["Title"] = "Tipos de Usuário";
}

<h1>Editar</h1>

<h4 class="subtitulo">Tipos de Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoUsuarioId" />
            <div class="form-group">
                <label asp-for="NomeTipoUsuario" class="control-label">Tipo do Usuário</label>
                <input asp-for="NomeTipoUsuario" class="form-control" />
                <span asp-validation-for="NomeTipoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary" asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
