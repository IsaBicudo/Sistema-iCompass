@model iCompass.Models.TipoConteudo

@{
    ViewData["Title"] = "Editar";
}

<h1 class="subtitulo">Editar</h1>

<h4>Tipo Conteúdo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoConteudoId" />
            <div class="form-group">
                <label asp-for="NomeTipoConteudo" class="control-label">Tipo de Conteúdo</label>
                <input asp-for="NomeTipoConteudo" class="form-control" />
                <span asp-validation-for="NomeTipoConteudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicoAlvo" class="control-label">Público Alvo</label>
                <input asp-for="PublicoAlvo" class="form-control" />
                <span asp-validation-for="PublicoAlvo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
