@model IEnumerable<iCompass.Models.TipoConteudo>

@{
    ViewData["Title"] = "Tipo Conteúdo";
}

<h1 class="subtitulo">Tipo Conteúdo</h1>

<p>
    <a asp-action="Create" class="btn-primary">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeTipoConteudo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicoAlvo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeTipoConteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicoAlvo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.TipoConteudoId" class="btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.TipoConteudoId" class="btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.TipoConteudoId" class="btn-segundo"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
